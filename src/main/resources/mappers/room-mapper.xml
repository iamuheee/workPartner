    <!-- 회의실 정보 수정 후 장비 새로 삽입하기 -->
    <!-- 작성자 : 박태은 -->
    <update id="updateUsingEquip">
  	<foreach collection="equips" item="item" index="index" open="insert all" close="select * from dual">
		  into tb_usingequip
		  (
		    rm_no
		  , eq_no
		  )
		  values
		  (
		    #{r.rmNo}
		  , #{item}
		  )
	</foreach>
	</update>
		 
</mapper>
